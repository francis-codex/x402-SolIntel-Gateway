{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install --frozen-lockfile && pnpm --filter gateway build",
    "nixPkgs": ["nodejs", "pnpm", "python3"]
  },
  "deploy": {
    "startCommand": "cd backend/gateway && pnpm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
